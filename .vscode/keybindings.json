[
  {
    "key": "cmd+shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Run All Tests",
    "when": "!inDebugMode"
  },
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Run Frontend Tests",
    "when": "!inDebugMode"
  },
  {
    "key": "cmd+shift+b",
    "command": "workbench.action.tasks.runTask",
    "args": "🧪 Run Backend Tests",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+shift+o",
    "command": "simpleBrowser.show",
    "args": {
      "url": "http://localhost:3000",
      "title": "🎯 Scrum Poker App"
    }
  },
  {
    "key": "ctrl+alt+o",
    "command": "vscode.open",
    "args": "http://localhost:3000"
  },
  {
    "key": "ctrl+shift+h",
    "command": "simpleBrowser.show",
    "args": {
      "url": "http://localhost:8080/health",
      "title": "🏥 Backend Health"
    }
  },
  {
    "key": "ctrl+alt+h",
    "command": "vscode.open",
    "args": "http://localhost:8080/health"
  }
]
